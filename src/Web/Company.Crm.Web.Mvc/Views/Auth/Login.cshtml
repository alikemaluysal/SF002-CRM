@model LoginDto

<form action="Login" method="post">

    <div class="card">
        <div class="card-header">
            Login
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="EmailAddressOrUsername"></label>
                <input asp-for="EmailAddressOrUsername" />
            </div>
            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
            </div>

            <button type="submit" class="btn btn-primary">Giriş</button>
        </div>
    </div>
</form>